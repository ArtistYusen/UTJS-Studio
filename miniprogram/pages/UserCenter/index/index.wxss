/* pages/UserCenter/UserCenter.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
}

.head{
  width: 100%;
  height: 40%;
  background-color: #fafafa;
  display: flex;
}

.greet{
  width: 400rpx;
  height: 200rpx;
  background-color: #fafafa00;
  display: flex;
  position: relative;
  z-index: 20;
  font-size: x-large;
  color: black;
  font-weight: bolder;
  margin-top: 235rpx;
  margin-left: 50rpx;
}

.banner{
  width: 400rpx;
  height: 400rpx;
  background-color: rgba(255, 255, 255, 0);
  position: fixed;
  overflow: hidden;
  z-index: 0;
  margin-top: 50rpx;
  margin-left: -50rpx;
}

.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: fixed;
  margin-top: 195rpx;
  margin-left: 550rpx;
}

.edit{
  width: 150rpx;
  height: 150rpx;
  z-index: 40;
  position: fixed;
  background-color: rgba(255, 255, 255, 0);
  margin-top: 100rpx;
  margin-left: 100rpx;
}

.data{
  width: 90%;
  height: 10%;
  margin-left: 1%;
  background-color: #00000094;
  border-radius: 5%;
}

.data_block{
  width: 200rpx;
  height: 90rpx;
  position: fixed;
}