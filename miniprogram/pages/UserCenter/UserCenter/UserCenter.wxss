/* pages/UserCenter/UserCenter.wxss */
page {
  height: 100%;
  width: 100%;
  background-color: #fafafa;
}

.head{
  height: 40%;
  width: 100%;
  background-color: #fafafa;
  display: flex;
  position: fixed;
  flex-direction: row;  
  text-align: center;
  align-items: center;
}

.banner{
  height: 450rpx;
  width: 450rpx;
  position: fixed;
  z-index: 0;
  margin-left: -100rpx;
  background-color: #ffffff00;
  overflow: hidden;
}

.text{
  height: 350rpx;
  width: 350rpx;
  position: relative;
  z-index: 20;
  margin-top: 300rpx;
  margin-left: -40rpx;
  line-height: 18px;
  background: rgba(255, 255, 255, 0);
  font-size: x-large;
  font-style: normal;
  font-weight: bold;
  display: inline-block;
  color: #000000;
}

.edit{
  height: 50rpx;
  width: 50rpx;
  position: fixed;
  z-index: 40;
  margin-left: 200rpx;
  margin-top: 90rpx;
  background: rgba(255, 255, 255, 0);
}

.avatar{
  width: 150rpx;
  height: 150rpx;
  margin-left: 200rpx;
  z-index: 20;
  position: relative;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0);
}

.study_data{
  width: 100%;
  height: 15%;
  margin-left: 5%;
  margin-top: 70%;
  position: relative;
  background-color: rgba(255, 255, 255, 0);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  z-index: 0;
}

.data_background{
  width: 90%;
  height: 15%;
  margin-right: 10%;
  position: fixed;
  background-color: rgba(255, 255, 255, 0);
  z-index: 0;
}

.data_block{
  height: 350rpx;
  width: 250rpx;
  margin-top: 250rpx;
  margin-left: 12.5%;
  z-index: 20;
  position: fixed;
  background: rgba(255, 255, 255, 0);
}

.data_number{
  height: 350rpx;
  width: 250rpx;
  position: relative;
  background: rgba(255, 255, 255, 0);
  font-size: x-large;
  font-style: normal;
  font-weight: bold;
  color: #000000;
}

.data_unit{
  height: 100rpx;
  width: 100rpx;
  position: relative;
  background: rgba(255, 255, 255, 0);
  font-size: small;
  font-style: normal;
  font-weight: bold;
  color: #6d6d6d;
}
